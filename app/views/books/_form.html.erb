<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Название %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :Автор %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :Издательство %>
    <%= form.text_field :publisher %>
  </div>

  <div class="field">
    <%= form.label :Год %>
    <%= form.number_field :year %>
  </div>

  <div class="field">
    <%= form.label :Жанр %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
